<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="120dp"
    android:layout_marginRight="@dimen/sixteen_dp"
    android:layout_marginTop="@dimen/sixteen_dp"
    android:layout_marginBottom="@dimen/sixteen_dp"
    android:layout_marginEnd="@dimen/sixteen_dp"
    app:cardCornerRadius="@dimen/thirty_two_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/art_cat"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables"
        android:id="@+id/categLinear"
        android:paddingLeft="@dimen/sixteen_dp"
        >

        <ImageView
            android:id="@+id/categImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_twent_four"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/categories_description"
            tools:background="@drawable/ic_music_note_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Music"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:id="@+id/categTitle"

            />
    </LinearLayout>

</android.support.v7.widget.CardView>